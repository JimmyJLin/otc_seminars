<% layout('main') -%>

<div id="seminars" class="container">

  <!-- Modal Trigger -->
  <div class="fixed-action-btn horizontal">
    <a class="btn-floating btn-large red modal-trigger" href="#modal1">
      <i class="large material-icons">add</i>
    </a>
  </div>

  <!-- Modal Structure -->
  <div id="modal1" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h4>Add New Seminar</h4>

      <div class="row">
        <form method="post" class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <select name="seminar">
                <option value="" disabled selected>Choose your option</option>
                <option value="handcraft_3days">Handcraft 3 Days Seminar</option>
                <option value="handcraft_5days">Handcraft 5 Days Seminar</option>
                <option value="machine_3days">Machine 3 Days Seminar</option>
                <option value="machine_5days">Machine 5 Days Seminar</option>
              </select>
              <label>Seminar Type</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <input name="date" type="text" class="datepicker">
              <label for="date">Date</label>
            </div>
          </div>

          <button class="btn waves-effect waves-light modal-close right" type="submit">Submit
            <i class="material-icons right">send</i>
          </button>

        </form>
      </div>

    </div>

  </div>

  <!-- partials -->
  <h2>Hair Stroke Seminars</h2>

  <table class="highlight">
    <thead>
      <tr>
          <th>Type</th>
          <th>Date</th>
          <th>Attendees</th>
          <th>Completed</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td>Handcraft</td>
        <td>Jan 11-15</td>
        <td>2 / 10</td>
        <td>YES</td>
      </tr>
      <tr>
        <td>Handcraft</td>
        <td>Jan 8-12</td>
        <td>5 / 10</td>
        <td>NO</td>
      </tr>
      <tr>
        <td>Machine</td>
        <td>Jan 22-26</td>
        <td>2 / 10</td>
        <td>NO</td>
      </tr>
      <tr>
        <td>Handcraft</td>
        <td>Feb 5-9</td>
        <td>2 / 10</td>
        <td>NO</td>
      </tr>
    </tbody>
  </table>

</div>
